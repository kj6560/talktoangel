    <!--  -->
    <div class="container">
        
        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="card card-body shadow mt-3">
                    <form action="/create_room" method="POST">
                        <h4 class="text-center">Create Room</h4>
                        <div class="form-group">
                            <div class="input-group">
                                <input type="text" class="form-control form-control-lg" placeholder="Room name" name="room_name" />
                                <input type="text" class="form-control form-control-lg" placeholder="Room name" name="owner_email" value="{{data.user_email}}" hidden/>
                                <div class="input-group-append">
                                    <input type="submit" class="btn btn-primary btn-lg" value="create">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!--  -->
        <div class="card card-body shadow my-4">
            <table id="rooms-table" class="table table-striped table-sm table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Room id</th>
                        <th>Room name</th>
                        <th>Max Participants</th>
                        <th>Participants Attended</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    
                        {{#each all_rooms}}
                        <tr>
                            <td>{{this.roomid}}</td>
                            <td>{{this.room_name}}</td>
                            <td>{{this.room_max_participants}}</td>
                            <td>{{this.room_total_participants}}</td>
                            <td><a class="btn btn-info btn-sm mr-2" href="/export_participants">Export participants</a> <a class="btn btn-danger btn-sm" href="/edit_room">Edit</a>  <a class="btn btn-danger btn-sm" href="/delete_room/{{this.roomid}}">Delete</a>   <a class="btn btn-danger btn-sm" href="/join_room/{{this.roomid}}">Join</a></td>
                        </tr>
                        {{/each}}
                   
                    
                </tbody>
            </table>
        </div>
    </div>

